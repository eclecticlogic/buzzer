<Page
    x:Class="QuestBuzzer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuestBuzzer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='1' x:Name="buttonStatusGrid" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Ellipse x:ConnectionId='4' x:Name="whiteEllipse" HorizontalAlignment="Stretch" Height="{Binding ElementName=whiteEllipse, Path=ActualWidth}" 
                 Fill="White" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <Ellipse x:ConnectionId='5' x:Name="redEllipse" HorizontalAlignment="Stretch" Height="{Binding ElementName=redEllipse, Path=ActualWidth}" 
                 Fill="Red" Grid.Row="1" Grid.Column="1" Margin="5"/>
            <Ellipse x:ConnectionId='6' x:Name="greenEllipse" HorizontalAlignment="Stretch" Height="{Binding ElementName=greenEllipse, Path=ActualWidth}" 
                 Fill="Green" Grid.Row="1" Grid.Column="2" Margin="5"/>
            <Ellipse x:ConnectionId='7' x:Name="blueEllipse" HorizontalAlignment="Stretch" Height="{Binding ElementName=blueEllipse, Path=ActualWidth}" 
                 Fill="Blue" Grid.Row="1" Grid.Column="3" Margin="5"/>
            <Ellipse x:ConnectionId='8' x:Name="yellowEllipse" HorizontalAlignment="Stretch" Height="{Binding ElementName=yellowEllipse, Path=ActualWidth}" 
                 Fill="Yellow" Grid.Row="1" Grid.Column="4" Margin="5"/>

            <TextBlock x:ConnectionId='9' x:Name="whiteTeam" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 10 0 0" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='10' x:Name="redTeam" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 10 0 0" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='11' x:Name="greenTeam" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 10 0 0" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='12' x:Name="blueTeam" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 10 0 0" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='13' x:Name="yellowTeam" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 10 0 0" FontSize="20" TextAlignment="Center"/>

            <TextBlock x:ConnectionId='14' x:Name="whiteEllapsed" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0 0 0 10" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='15' x:Name="redEllapsed" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0 0 0 10" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='16' x:Name="greenEllapsed" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0 0 0 10" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='17' x:Name="blueEllapsed" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0 0 0 10" FontSize="20" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='18' x:Name="yellowEllapsed" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0 0 0 10" FontSize="20" TextAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='2' x:Name="nextTeamButton" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Next Team" Grid.Column="0"                             />
            <Button x:ConnectionId='3' x:Name="resetButton" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Reset" Grid.Column="1"                          />
        </Grid>
    </Grid>
</Page>

